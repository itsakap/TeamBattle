<!-- _form.html.erb -->
<%= form_for @team do |f| %>
  <% if @team.errors.any? %>
   <div id="error_explanation">
     <h2><%= pluralize(@team.errors.count, "error") %>
       prohibited this user from being saved:</h2>
     <ul>
     <% @team.errors.full_messages.each do |msg| %>
       <li><%= msg %></li>
     <% end %>
     </ul>
   </div>
  <% end %>
  <p>
    <%= f.label :name, "Team Name" %>
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>